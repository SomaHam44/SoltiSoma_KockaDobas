<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >




        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginLeft="55dp"
            android:id="@+id/egyikdobokocka"
            android:src="@drawable/kocka1">

        </ImageView>

        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:id="@+id/masikdobokocka"
            android:src="@drawable/kocka1"/>

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/btn_kocka1"
            android:text="1 KOCKA"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/btn_kocka2"
            android:text="2 KOCKA"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="DOBÁS"
            android:id="@+id/btn_dobas"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="RESET"
            android:id="@+id/btn_reset"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_eredmeny"
            android:text="10 (6+4)\n8 (5+3)\n6 (2+4)"
            android:textSize="35sp"/>



"
    </LinearLayout>



</RelativeLayout>